@model FahharTest.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Electro - HTML Ecommerce Template</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/tmp/tmp/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/tmp/tmp/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/tmp/tmp/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/tmp/tmp/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/tmp/tmp/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/tmp/tmp/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- SECTION -->
    <!-- container -->

    <div style="width: 600px;
        height:680px;
        padding: 150px 150px;
        position: relative;

        margin: auto;
">
        <form class="form-group" method="post">

            <div class="col-md-5 order-details" style="width: 300px;height: 500px;position: relative; margin: auto;">
                <!-- Billing Details -->
                <div class="section-title">
                    <h3 class="title">Ürün Ekle</h3>
                </div>
                <div>
                    @Html.TextBoxFor(urun => urun.ADI, new { placeholder = "Ürün Adı", @class = "form-control", @style = "background-color:#f1f1f1;" })
                </div>
                <br />
                <div>
                    @Html.TextBoxFor(urun => urun.ACIKLAMA, new { placeholder = "Ürün Detayları", @class = "form-control", @style = "background-color:#f1f1f1;" })

                </div>
                <br />
                <div>
                    @Html.TextBoxFor(urun => urun.FIYAT, new { placeholder = "Fiyat", @class = "form-control", @style = "background-color:#f1f1f1;" })

                </div>
                <br />
                <div>
                    @Html.TextBoxFor(urun => urun.RESIM, new { placeholder = "Ürün Fotoğrafı", @class = "form-control", @style = "background-color:#f1f1f1;" })

                    <p style="color: #D10024;font-size: 10px;margin-top:5px">**Kitabın kapak resmini <a href="https://imgyukle.com/" style="text-decoration-style:initial"><ins>buraya</ins></a> yükleyerek .jpg uzantılı URL'yi buraya ekleyiniz..</p>
                </div>
                <br />
                <div>
                    @Html.TextBoxFor(urun => urun.INDIRIM, new { placeholder = "% İndirim Yüzdesi", @class = "form-control", @style = "background-color:#f1f1f1;" })
                </div>
                <br />
                <div>

                    <p>  @Html.CheckBox("ISKARGO")  Kargo Bedava!</p>

                </div>
                <button class="btn btn-group primary-btn order-submit" id="Btn">Ürün Ekle</button>

            </div>
            <!-- /Billing Details -->


        </form>


    </div>


    <!-- /container -->
    <!-- /SECTION -->
    <!-- jQuery Plugins -->
    <script src="~/tmp/tmp/js/jquery.min.js"></script>
    <script src="~/tmp/tmp/js/bootstrap.min.js"></script>
    <script src="~/tmp/tmp/js/slick.min.js"></script>
    <script src="~/tmp/tmp/js/nouislider.min.js"></script>
    <script src="~/tmp/tmp/js/jquery.zoom.min.js"></script>
    <script src="~/tmp/tmp/js/main.js"></script>

</body>
</html>

